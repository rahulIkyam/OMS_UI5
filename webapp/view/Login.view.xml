<mvc:View
    controllerName="oms1.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    height="100%">
    
    <Page id="loginPage" showHeader="false">
        <content>
            <VBox id="_IDGenVBox" alignItems="Center" justifyContent="Center" class="sapUiLargeMargin">
                <VBox id="_IDGenVBox1" width="300px">
                    <Title id="_IDGenTitle" text="OMS Login" class="sapUiSmallMarginBottom"/>
                    <Label id="_IDGenLabel1" text="Username" required="true"/>
                    <Input 
                        id="usernameInput"
                        placeholder="Enter username"
                        valueLiveUpdate="true"
                        class="sapUiSmallMarginBottom"/>
                    
                    <Label id="_IDGenLabel2" text="Password" required="true"/>
                    <Input 
                        id="passwordInput"
                        type="Password"
                        placeholder="Enter password"
                        class="sapUiSmallMarginBottom"/>
                    
                    <Button id="_IDGenButton" 
                        text="Login" 
                        type="Emphasized" 
                        press=".onLoginPress"
                        class="sapUiSmallMarginTop"
                        width="100%"/>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>